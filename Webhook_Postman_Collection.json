{
  "info": {
    "name": "Webhook Platform API",
    "description": "Collection for testing webhook functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send Webhook (POST)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Signature",
            "value": "sha256={{signature}}",
            "description": "Use HMAC calculator tool to generate this"
          },
          {
            "key": "User-Agent",
            "value": "PostmanTest/1.0"
          },
          {
            "key": "X-Request-Id",
            "value": "test-{{$timestamp}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\": \"test.webhook\",\n  \"data\": {\n    \"id\": \"test-123\",\n    \"message\": \"Hello from Postman!\",\n    \"timestamp\": \"2024-01-20T10:30:00Z\",\n    \"user\": {\n      \"id\": 1,\n      \"name\": \"Test User\",\n      \"email\": \"test@example.com\"\n    }\n  },\n  \"metadata\": {\n    \"source\": \"postman\",\n    \"version\": \"1.0\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8000/webhook/IGIi3LsaTcS3GIDMNsX7NmrwJpDgXhXC3WsVG9rK3zY/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["webhook", "IGIi3LsaTcS3GIDMNsX7NmrwJpDgXhXC3WsVG9rK3zY", ""]
        },
        "description": "Send a webhook request with HMAC signature verification"
      },
      "response": []
    },
